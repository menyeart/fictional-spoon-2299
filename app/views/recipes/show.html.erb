<h1>Recipe Name: <%= @recipe.name %></h1>
<p>Complexity: <%= @recipe.complexity %> </p>
<p>Genre: <%= @recipe.genre %></p>
<h3>Ingredients </h3>
<% @ingredients.each do |ingredient| %>
  <li><%= ingredient.name%></li>
<% end %>
</ul>
<p>Total ingredient cost: <%= @cost %> $</p>

  <%= form_with url: "/recipes/#{@recipe.id}/ingredients", method: :post, local: true do |form| %>
    <%= form.label :ingredient_id, "Add Ingredient(id)" %>
    <%= form.number_field :ingredient_id %>
    <%= form.submit "Submit" %>
  <% end %>